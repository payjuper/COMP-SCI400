#!/usr/bin/env bash

JUNITPATH="/libs/junit5.jar"

if [[ -f ${JUNITPATH} ]]; then
    cp ${JUNITPATH} ../
fi

if ! javac -encoding "UTF-8" -cp ../junit5.jar:. *.java; then
	echo
	echo "Submission Failed Check: cannot compile all java files in submission"
	exit 1
fi

if ! java -jar ../junit5.jar --class-path=. --select-class=P210SubmissionChecker; then
	echo
	echo "Submission Failed Check: one or more JUnit tests failed; if you’ve completed the shortestPathCost and shortestPathData methods, then you’re submission is complete for the mid-week deadline"
	exit 1
fi

echo
echo "Submission Passed Basic Scan"
exit 0
